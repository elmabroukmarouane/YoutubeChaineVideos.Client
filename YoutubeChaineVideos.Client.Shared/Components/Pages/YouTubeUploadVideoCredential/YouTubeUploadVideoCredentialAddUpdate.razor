<MudDialog>
    <DialogContent>
        <MudForm @ref="Form" @bind-IsValid="@Success" @bind-Errors="@Errors">
            @foreach (var property in typeof(YouTubeUploadVideoCredentialViewModel).GetProperties())
            {
                <MudTextField @typeparam="string"
                              Label="@property.Name"
                              Placeholder="Enter the value !" 
                              Required="true" 
                              RequiredError="Value is required!"
                              Value="@GetPropertyValue(property)"
                              ValueChanged="@(new EventCallbackFactory().Create<string>(this, newValue => OnValueChangedAsync(property, newValue)))"
                              Immediate="true" />
            }
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Info" OnClick="Ok" Disabled="!Success || Errors.Count() > 0">@TitleOkButton</MudButton>
        <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>